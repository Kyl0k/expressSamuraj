extends layout

block content
  h1= title
  if show
    form(method='post')
      p Jaka jest Twoja ulubiona pora roku?
      ul
        each item in data
          li
            label=item.title
            input(type='radio' name='quiz' value=item._id)
      input(type='submit' value='Zagłosuj')
      p Aby zobaczyć wyniki musisz zagłosować.
  else
    h1 Dokonałeś już głosu w ankiece.
    p Wyniki:
    ul
      each item in data
        li  #{item.title} głosów: #{item.vote} (#{Math.round((item.vote/sum)*100)}%)
    p Oddano głosów: #{sum}

